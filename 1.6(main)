#include "header.h"
#include <iostream>
using namespace std;

int main()
{
  cout << "1. int \n2. double \n3. char" << endl;
  int way; cin >> way;
  switch (way)
  {
    case 1:{
      cout << "Ведите N: "; int N; cin >> N;
      int* int_arr = new int[N];
      input_arr(int_arr, N, way);
    }break;
    case 2:{
      cout << "Ведите N: "; int M; cin >> M;
      double* doub_arr = new double[M];
      input_arr(doub_arr, M, way);
    }break;
    case 3:{
      //cout << "Ведите N: ";
      const int K = 100;
      char str[K]{};
      cout << "Введите строку: ";
      cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n');
      cin.getline(str, K);
      input_arr(str, K, way);
    }break;
    default:{
      cout << "Нет в списке"; return 0;}
  }
  return 0;
}
